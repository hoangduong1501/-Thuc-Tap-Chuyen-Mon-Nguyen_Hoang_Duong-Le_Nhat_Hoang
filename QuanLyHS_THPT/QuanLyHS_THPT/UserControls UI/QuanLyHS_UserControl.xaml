<UserControl x:Class="QuanLyHS_THPT.UserControls_UI.QuanLyHS_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyHS_THPT.UserControls_UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="524" d:DesignWidth="925">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="47"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Orientation="Horizontal"
            Margin="4">
            <RadioButton
                Style="{StaticResource MaterialDesignTabRadioButton}"
                Margin="4" IsChecked="True" Content="Hồ Sơ" 
                x:Name="btn_HoSo" Click="btn_HoSo_Click"/>
            <RadioButton
                Style="{StaticResource MaterialDesignTabRadioButton}"
                Margin="4" IsChecked="False" Content="Tra Cứu" 
                x:Name="btn_TraCuu" Click="btn_HoSo_Click"/>
            <RadioButton
                Style="{StaticResource MaterialDesignTabRadioButton}"
                Margin="4" IsChecked="False" Content="Thành tích, Kỉ luật" 
                x:Name="btn_ThanhTichKiLuat" Click="btn_HoSo_Click"/> 
        </StackPanel>
        <Grid Grid.Row="1" x:Name="Grid_Person">

        </Grid>
    </Grid>
</UserControl>
